    <SplitPane dividerPositions="0.2505567928730512" focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <items>
            <Accordion>
              <panes>
                  <TitledPane animated="false" text="服务器连接">
                     <content>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <GridPane vgap="4.0">
                                <columnConstraints>
                                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="97.0" minWidth="10.0" prefWidth="76.0" />
                                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="133.0" minWidth="10.0" prefWidth="125.0" />
                                </columnConstraints>
                                <rowConstraints>
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                 <children>
                                    <Label text="IP地址" />
                                    <TextField fx:id="sshIPInput" promptText="127.0.0.1" GridPane.columnIndex="1" />
                                    <Label text="端口号" GridPane.rowIndex="1" />
                                    <TextField fx:id="sshPortInput" promptText="22" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <Label text="用户名" GridPane.rowIndex="2" />
                                    <TextField fx:id="sshUserNamenput" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                     <Label text="用户名" GridPane.rowIndex="2" />
                                     <TextField fx:id="sshUserNameInput" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <Label text="密码" GridPane.rowIndex="3" />
                                    <TextField fx:id="sshPasswordInput" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    <Button fx:id="sshConnectButton" mnemonicParsing="false" onAction="#sshConnectButtonClick" text="连接" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
                                 </children>
                              </GridPane>
                           </children>
                        </VBox>
                     </content>
                  </TitledPane>
                <TitledPane animated="false" text="测试对象与配置">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <children>
                                    <GridPane fx:id="testObjectConfigPane" alignment="CENTER_LEFT" hgap="10.0" nodeOrientation="LEFT_TO_RIGHT" vgap="4.0">
                                      <columnConstraints>
                                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="10.0" />
                                      </columnConstraints>
                                      <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                      </rowConstraints>
                                       <children>
                                          <Label text=" 测试对象:" />
                                          <ComboBox fx:id="testObjectSelectBox" onAction="#onTestObjectSelect" promptText="选择对象" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
                                       </children>
                                    </GridPane>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                  </content>
                </TitledPane>
                <TitledPane animated="false" text="测试参数配置">
                     <content>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <GridPane fx:id="testProjectConfigPane" alignment="CENTER_LEFT" hgap="10.0" vgap="4.0">
                                 <columnConstraints>
                                    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                 </rowConstraints>
                                 <children>
                                    <Label text=" 测试项目:" />
                                    <ComboBox fx:id="testProjectSelectBox" onAction="#onTestProjectSelect" prefHeight="26.0" prefWidth="108.0" promptText="选择项目" GridPane.columnIndex="1" />
                                 </children>
                              </GridPane>
                           </children>
                        </VBox>
                     </content>
                </TitledPane>
              </panes>
            </Accordion>
          <ScrollPane fitToWidth="true" prefHeight="-1.0" prefWidth="-1.0">
              <content>
                  <VBox fillWidth="true" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
                      <children>
                          <HBox alignment="CENTER_LEFT" spacing="10">
                              <VBox spacing="5">
                                  <Label text="测试进度:">
                                 <font>
                                    <Font size="18.0" />
                                 </font></Label>
                                  <ProgressBar fx:id="progressBar" prefWidth="200" />
                              </VBox>
                              <VBox alignment="CENTER" spacing="5">
                                  <Label fx:id="progressPercentLabel" text="0%" />
                                  <Label fx:id="currentStepLabel" text="等待开始" />
                              </VBox>
                          </HBox>

                          <Label text="资源占用情况:">
                           <font>
                              <Font size="18.0" />
                           </font></Label>
                          <HBox spacing="10" VBox.vgrow="ALWAYS">
                              <LineChart fx:id="cpuUsageLineChart" prefHeight="200" prefWidth="200" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                  <xAxis>
                                      <CategoryAxis fx:id="cpuTimeAxis" label="时间" />
                                  </xAxis>
                                  <yAxis>
                                      <NumberAxis fx:id="cpuAxis" label="CPU (%)" upperBound="90.0" />
                                  </yAxis>
                              </LineChart>

                              <LineChart fx:id="memoryUsageLineChart" prefHeight="200" prefWidth="200" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                  <xAxis>
                                      <CategoryAxis fx:id="memoryTimeAxis" label="时间" />
                                  </xAxis>
                                  <yAxis>
                                      <NumberAxis fx:id="memoryAxis" label="内存 (%)" upperBound="40.0" />
                                  </yAxis>
                              </LineChart>

                              <LineChart fx:id="diskSpeedLineChart" prefHeight="200" prefWidth="200" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                  <xAxis>
                                      <CategoryAxis fx:id="diskTimeAxis" label="时间" />
                                  </xAxis>
                                  <yAxis>
                                      <NumberAxis fx:id="speedAxis" label="速度 (MB/s)" upperBound="400.0" />
                                  </yAxis>
                              </LineChart>
                          </HBox>

                          <Label text="测试结果:">
                           <font>
                              <Font size="18.0" />
                           </font></Label>
                          <TableView fx:id="resultsTableView" VBox.vgrow="ALWAYS">
                              <columns>
                                  <TableColumn fx:id="queryColumn" text="查询" />
                                  <TableColumn fx:id="resultColumn" text="结果" />
                                  <!-- 添加更多的列 -->
                              </columns>
                          </TableView>

                      </children>
                  </VBox>
              </content>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
          </ScrollPane>

      </items>
