<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="sqlExecutionVBox" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <children>
        <TextArea fx:id="sqlTextField" promptText="输入SQL语句" wrapText="true"/>
        <HBox alignment="TOP_RIGHT">
            <Button text="执行" fx:id="executeSqlButton"/>
        </HBox>
        <TextArea fx:id="sqlOutputTextArea" promptText="SQL执行结果" VBox.vgrow="ALWAYS" wrapText="true"/>
    </children>
</VBox>
